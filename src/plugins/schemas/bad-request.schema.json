{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "badRequest",
  "properties": {
    "statusCode": {
      "const": 400,
      "default": 400
    },
    "error": {
      "const": "Bad Request",
      "default": "Bad Request"
    },
    "message": {
      "type": "string"
    }
  },
  "required": ["statusCode", "error"],
  "additionalProperties": false
}
