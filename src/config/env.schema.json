{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "LOG_LEVEL": {
      "type": "string",
      "enum": ["fatal", "error", "warn", "info", "debug", "trace", "silent"]
    },
    "MONGO_URI": {
      "type": "string"
    },
    "PORT": {
      "type": "string"
    },
    "RUNTIME_ENV": {
      "type": "string",
      "enum": ["local", "test", "dev", "sta", "pro"]
    }
  },
  "required": ["MONGO_URI"],
  "additionalProperties": false
}
