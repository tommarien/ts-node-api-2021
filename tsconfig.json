{
  "extends": "@tsconfig/node16",
  "ts-node": {
    "transpileOnly": true /* Use TypeScript's faster transpileModule */,
    "files": true /* Load files, include and exclude from tsconfig.json on startup */
  },
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist" /* Redirect output structure to the directory. */,
    "noUncheckedIndexedAccess": true /* Include 'undefined' in index signature results */,
    "types": ["reflect-metadata", "mocha"],
    "experimentalDecorators": true /* Enables experimental support for ES7 decorators. */,
    "emitDecoratorMetadata": true /* Enables experimental support for emitting type metadata for decorators. */,
    "resolveJsonModule": true /* Allow json imports */
  },
  "include": ["src", "migrations", "test", "migrate-mongo-config.js"]
}
