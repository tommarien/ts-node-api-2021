{
  "name": "ts-node-jest",
  "version": "1.0.0",
  "description": "A typescript node api",
  "main": "src/server.ts",
  "repository": "git@github.com:tommarien/ts-node-api-2021.git",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "type": "commonjs",
  "module": "dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf .nyc_output dist",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "NODE_OPTIONS='-r dotenv/config' ts-node node_modules/.bin/migrate-mongo",
    "migrate:test": "MONGO_URI='mongodb://localhost/webshop-node-2021-test' ts-node node_modules/.bin/migrate-mongo",
    "serve": "nodemon -w ./src  --exec ts-node src/main.ts | pino-pretty --translateTime --ignore hostname",
    "test": "tap --ts --test-ignore test"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^14.17.21",
    "@types/sinon": "^10.0.4",
    "@types/tap": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^6.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "nodemon": "^2.0.13",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "tap": "^15.0.10",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "env-schema": "^3.4.0",
    "fastify": "^3.22.0",
    "fastify-autoload": "^3.9.0",
    "fastify-swagger": "^4.12.4",
    "fluent-json-schema": "^3.0.1",
    "migrate-mongo": "^8.2.3",
    "mongodb": "^4.1.3"
  }
}
