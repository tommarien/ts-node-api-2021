{
  "name": "ts-node-jest",
  "version": "1.0.0",
  "description": "A typescript node api",
  "main": "src/server.ts",
  "repository": "git@github.com:tommarien/ts-node-api-2021.git",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "type": "commonjs",
  "module": "dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf coverage dist",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "serve": "nodemon -w ./src  --exec ts-node src/main.ts | pino-pretty --translateTime --ignore hostname",
    "test": "tap --ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^14.17.9",
    "@types/tap": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "concurrently": "^6.2.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "nodemon": "^2.0.12",
    "pino-pretty": "^5.1.3",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tap": "^15.0.9",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "env-schema": "^3.2.0",
    "fastify": "^3.20.1",
    "fluent-json-schema": "^3.0.1",
    "mongodb": "^4.1.0"
  }
}
