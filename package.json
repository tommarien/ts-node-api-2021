{
  "name": "ts-node-api",
  "version": "1.0.0",
  "description": "A typescript node api",
  "main": "src/server.ts",
  "repository": "git@github.com:tommarien/ts-node-api-2021.git",
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "type": "commonjs",
  "module": "dist/main.js",
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "src/**/*.spec.*"
    ],
    "require": "ts-node/register/transpile-only"
  },
  "c8": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.*"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.*"
    ],
    "all": true
  },
  "scripts": {
    "build": "tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf coverage dist",
    "coverage": "c8 npm run test",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "NODE_OPTIONS='-r dotenv/config' ts-node node_modules/.bin/migrate-mongo",
    "migrate:test": "MONGO_URI='mongodb://localhost/webshop-node-2021-test' ts-node node_modules/.bin/migrate-mongo",
    "dev": "nodemon -w ./src  --exec ts-node src/main.ts | pino-pretty --translateTime --ignore hostname",
    "test": "MONGO_URI='mongodb://localhost/webshop-node-2021-test' mocha"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.33",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.21.0",
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "concurrently": "^7.1.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@fastify/autoload": "^4.0.1",
    "@fastify/swagger": "^6.0.1",
    "ajv": "^8.11.0",
    "env-schema": "^4.0.0",
    "fastify": "^3.29.0",
    "fastify-plugin": "^3.0.1",
    "fluent-json-schema": "^3.1.0",
    "http-errors": "^2.0.0",
    "migrate-mongo": "^9.0.0",
    "mocha-junit-reporter": "^2.0.2",
    "mongodb": "^4.5.0"
  }
}
