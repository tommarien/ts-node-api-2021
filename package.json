{
  "name": "ts-node-jest",
  "version": "1.0.0",
  "description": "A typescript node api",
  "main": "src/server.ts",
  "repository": "git@github.com:tommarien/ts-node-api-2021.git",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "module": "dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf coverage dist",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "serve": "nodemon -w ./src --exec node --loader ts-node/esm --no-warnings src/main.ts | pino-pretty --translateTime --ignore hostname",
    "test": "tap -R spec --no-coverage-report --node-arg=--loader=ts-node/esm --node-arg=--no-warnings"
  },
  "devDependencies": {
    "@types/node": "^16.4.5",
    "@types/tap": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "nodemon": "^2.0.12",
    "pino-pretty": "^5.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tap": "^15.0.9",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "env-schema": "^3.1.0",
    "fastify": "^3.19.2",
    "fluent-json-schema": "^3.0.1",
    "mongodb": "^4.0.1"
  }
}
