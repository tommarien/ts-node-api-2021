{
  "name": "ts-node-api",
  "version": "1.0.0",
  "description": "A typescript node api",
  "main": "src/server.ts",
  "repository": "git@github.com:tommarien/ts-node-api-2021.git",
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "type": "commonjs",
  "module": "dist/main.js",
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "src/**/*.spec.*"
    ],
    "require": "ts-node/register/transpile-only"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.*"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.*"
    ],
    "all": true
  },
  "scripts": {
    "build": "tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf .nyc_output dist",
    "coverage": "nyc npm run test",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "NODE_OPTIONS='-r dotenv/config' ts-node node_modules/.bin/migrate-mongo",
    "migrate:test": "MONGO_URI='mongodb://localhost/webshop-node-2021-test' ts-node node_modules/.bin/migrate-mongo",
    "dev": "nodemon -w ./src  --exec ts-node src/main.ts | pino-pretty --translateTime --ignore hostname",
    "test": "MONGO_URI='mongodb://localhost/webshop-node-2021-test' mocha"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.26",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "chai": "^4.3.6",
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.5.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@fastify/ajv-compiler": "^2.1.0",
    "env-schema": "^3.5.2",
    "fastify": "^3.27.3",
    "fastify-autoload": "^3.11.0",
    "fastify-plugin": "^3.0.1",
    "fastify-swagger": "^4.15.0",
    "fluent-json-schema": "^3.1.0",
    "http-errors": "^2.0.0",
    "migrate-mongo": "^8.2.3",
    "mocha-junit-reporter": "^2.0.2",
    "mongodb": "^4.4.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0"
  }
}
