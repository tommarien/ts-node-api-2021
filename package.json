{
  "name": "ts-node-jest",
  "version": "1.0.0",
  "description": "A typescript node api",
  "main": "src/server.ts",
  "repository": "git@github.com:tommarien/ts-node-api-2021.git",
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "type": "commonjs",
  "module": "dist/main.js",
  "ava": {
    "files": [
      "src/**/*.spec.*"
    ],
    "concurrency": 1,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "scripts": {
    "build": "tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf .nyc_output dist",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "NODE_OPTIONS='-r dotenv/config' ts-node node_modules/.bin/migrate-mongo",
    "migrate:test": "MONGO_URI='mongodb://localhost/webshop-node-2021-test' ts-node node_modules/.bin/migrate-mongo",
    "serve": "nodemon -w ./src  --exec ts-node src/main.ts | pino-pretty --translateTime --ignore hostname",
    "test": "ava"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/node": "^16.11.6",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "ava": "^3.15.0",
    "concurrently": "^6.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "nodemon": "^2.0.14",
    "pino-pretty": "^7.2.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "ajv": "^8.6.3",
    "env-schema": "^3.4.0",
    "fastify": "^3.23.0",
    "fastify-autoload": "^3.9.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.2",
    "fastify-swagger": "^4.12.6",
    "fluent-json-schema": "^3.0.1",
    "migrate-mongo": "^8.2.3",
    "mongodb": "^4.1.4"
  }
}
